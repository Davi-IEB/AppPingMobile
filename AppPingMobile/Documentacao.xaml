<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             x:Class="AppPingMobile.Documentacao"
             Style="{StaticResource Key=PageStyle}"
             Title="Planejamento e Controle de Produção - Documentação">
    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="LogoPingTransp.ico"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout Padding="20">
            <Frame BackgroundColor="#ED2500" Padding="10" CornerRadius="5" >
                <Image Grid.Column="1" Source="LogoIebBranco" HorizontalOptions="Start" HeightRequest="50"/>
            </Frame>
            <WebView 
                x:Name="Doc"               
                HorizontalOptions="FillAndExpand"  
                VerticalOptions="FillAndExpand"
                Source="https://github.com/Davi-IEB/AppPingMobile/blob/master/AppDocumentos/01/ESTAMPARIA/EHS/AMBIENTAL/INDICADORES_1_trim_2021.pdf"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>